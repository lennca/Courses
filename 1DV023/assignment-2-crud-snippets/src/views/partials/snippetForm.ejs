<form action="<%=action%>" method="POST" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_csrf" value="<%=csrfToken%>">
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Enter snippet in the textarea below</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="8" name="snippetBody"><%-snippetBody%></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Enter tags below and split by comma (","):</label>
    <input type="text" class="form-control" id="exampleFormControlTextarea1" name="tagBody" value="<%=tagString%>" placeholder="firstTag, tag2, last tag">
    </input>
  </div>
  <button type="submit" class="btn btn-primary"><%-buttonText%></button>
</form>
